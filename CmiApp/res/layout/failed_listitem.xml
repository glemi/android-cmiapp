<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/listitem_background_normal"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingBottom="6dp" >
    
    <TextView
        android:id="@+id/failedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Couldn't load data from Cmi Server. Tap to retry."
        android:textAppearance="?android:attr/textAppearanceSmall" />

	<ImageView
	    android:id="@+id/retry"
	    android:layout_width="35dp"
	    android:layout_height="35dp"
	    android:layout_below="@id/failedText"
	    android:layout_marginTop="18dp"
	    android:layout_centerHorizontal="true"
	    android:contentDescription="Retry"
	    android:scaleType="fitCenter"
	    android:src="@drawable/ic_menu_refresh" />

	<View
	    android:layout_width="match_parent"
	    android:layout_height="12dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:background="@color/listHeaderBackground" />
    
</RelativeLayout>